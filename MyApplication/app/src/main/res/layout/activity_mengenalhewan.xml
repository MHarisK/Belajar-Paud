<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mengenalhewan"
    android:background="@drawable/membaca">

    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/gajah"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        />

    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/btn1"
        android:layout_toRightOf="@id/btn1"
        android:src="@drawable/harimau"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        />

    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/btn2"
        android:layout_toRightOf="@id/btn2"
        android:src="@drawable/ikan"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        />

    <ImageButton
        android:id="@+id/btn4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/btn1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/kura"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        />
    <ImageButton
        android:id="@+id/btn5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/btn2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/btn1"
        android:src="@drawable/macan"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        />
    <ImageButton
        android:id="@+id/btn6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/btn3"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/btn2"
        android:src="@drawable/ayam"
        android:scaleType="fitXY"
        android:background="#00ffffff"/>
</RelativeLayout>
